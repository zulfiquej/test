@model EventEaseBooking.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; height: auto; margin-bottom: 20px;" />
}

<div>
    <p><strong>Start Date:</strong> @Model.StartDate.ToString("D")</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToString("D")</p>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <p><strong>Description:</strong> @Model.Description</p>
    }

    @if (Model.Bookings != null && Model.Bookings.Any())
    {
        <p><strong>Number of Bookings:</strong> @Model.Bookings.Count</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
