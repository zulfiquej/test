@model EventEaseBooking.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

@* 🚨 Validation summary for errors like "event has bookings" *@
<div asp-validation-summary="All" class="alert alert-danger"></div>

<h3>Are you sure you want to delete this event?</h3>

<div class="mb-3">
    <h4>@Model.Name</h4>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="Delete" asp-controller="Event" method="post">
    @* ✅ Important: include the ID so the controller knows which event to delete *@
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
