@model EventEaseBooking.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Delete Venue</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <h4>@Model.Name</h4>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
    <p><strong>Description:</strong> @Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <p><img src="@Model.ImageUrl" alt="Venue Image" style="max-width:300px;" /></p>
    }
</div>

<form asp-action="Delete" method="post">
    @* Anti-forgery token is essential *@
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
