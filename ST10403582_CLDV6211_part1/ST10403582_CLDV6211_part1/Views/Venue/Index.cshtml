@model IEnumerable<EventEaseBooking.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h2>Venues</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.Name</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@venue.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@venue.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@venue.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">New Venue</a>
